<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Leaderboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="/logo.png" type="image/png">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-100 to-indigo-200 min-h-screen flex flex-col">

    <!-- Back-to-top Button -->
    <button type="button" class="fixed bottom-5 right-5 bg-blue-600 text-white p-4 rounded-full shadow-lg hover:bg-blue-700" id="btn-back-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Navigation -->
    <nav class="p-6 shadow-lg" style="background-color: #4a90e2;">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="text-white text-4xl font-bold tracking-wide">Leaderboard</h1>
            <% const url = 'main?username=' + encodeURIComponent(username); %>
            <button class="bg-white text-indigo-700 px-6 py-2 rounded-lg font-semibold hover:bg-indigo-100 transition-all" id="playAgainBtn" onclick="window.location.href='<%= url %>'">Play again</button>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="flex-grow flex items-center justify-center py-10 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-4xl p-8">
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
                
                <% let top3Users = users.slice(0, 3); %>
                <div class="flex flex-col items-center rounded-lg p-6 shadow-lg transition-transform hover:scale-105 top-user-gold">
                    <i class="fas fa-crown text-yellow-200 text-6xl"></i>
                    <h2 class="text-2xl font-bold mt-4 text-black"><%= top3Users[0].username %></h2>
                    <p class="text-lg text-white">Level: <%= top3Users[0].maxLevel %></p>
                </div>
                
                <div class="flex flex-col items-center rounded-lg p-5 shadow-lg transition-transform hover:scale-105 top-user-silver">
                    <i class="fas fa-medal text-gray-100 text-4xl"></i>
                    <h2 class="text-xl font-bold mt-3 text-black"><%= top3Users[1].username %></h2>
                    <p class="text-lg text-white">Level: <%= top3Users[1].maxLevel %></p>
                </div>
                
                <div class="flex flex-col items-center rounded-lg p-4 shadow-lg transition-transform hover:scale-105 top-user-bronze">
                    <i class="fas fa-medal text-orange-200 text-3xl"></i>
                    <h2 class="text-lg font-bold mt-2 text-black"><%= top3Users[2].username %></h2>
                    <p class="text-md text-white">Level: <%= top3Users[2].maxLevel %></p>
                </div>
            </div>

            <!-- Search & User List -->
            <div class="mb-6">
                <div class="relative flex items-center mb-4">
                    <i class="fas fa-search text-gray-500 absolute ml-3"></i>
                    <input type="text" id="searchInput" class="w-full pl-10 border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-400" placeholder="Search for usernames..." onkeyup="filterUsers()">
                </div>
                <div id="noUserMessage" class="text-red-500 text-center hidden mb-6">No existing player with this name.</div>
                <ul id="userList" class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <% const colors = ['bg-red-500', 'bg-green-500', 'bg-blue-500', 'bg-purple-500', 'bg-pink-500', 'bg-orange-400']; %>
                    <% const remainingUsers = users.slice(3); %>
                    <% remainingUsers.forEach((user, index) => { %>
                        <li onclick="location.href='/history?user=<%= encodeURIComponent(user.username) %>'" 
                            class="hover:bg-indigo-100 p-4 rounded-lg shadow-md flex justify-between items-center transition-all cursor-pointer <%= colors[index % colors.length] %>">
                            <div class="flex items-center space-x-3">
                                <i class="fas fa-user text-indigo-500 text-2xl"></i>
                                <span class="text-lg font-semibold text-white"><%= user.username %></span>
                            </div>
                            <span class="text-lg font-bold text-white"><%= user.maxLevel %></span>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <script>
        const backToTopButton = document.getElementById('btn-back-to-top');
        const userList = document.getElementById('userList');
        const noUserMessage = document.getElementById('noUserMessage');

        window.onscroll = function() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                backToTopButton.classList.add('show');
            } else {
                backToTopButton.classList.remove('show');
            }
        };

        backToTopButton.addEventListener('click', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        function filterUsers() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const li = userList.getElementsByTagName('li');
            let foundUser = false;

            for (let i = 0; i < li.length; i++) {
                const txtValue = li[i].textContent || li[i].innerText;
                if (txtValue.toLowerCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                    foundUser = true;
                } else {
                    li[i].style.display = "none";
                }
            }

            noUserMessage.style.display = foundUser ? "none" : "block";
        }
    </script>

    <style>
        
        .top-user-gold {
            background: linear-gradient(145deg, #f0e68c, #f7d15a 20%, #ffcc33 40%, #f5b500 60%, #db9500 80%, #b67c00 100%);
        }

        .top-user-silver {
            background: linear-gradient(145deg, #d6d6d6, #cccccc 20%, #bfbfbf 40%, #b2b2b2 60%, #999999 80%, #808080 100%);
        }

        .top-user-bronze {
            background: linear-gradient(145deg, #c19a6b, #b07e52 20%, #a96a4f 40%, #925d42 60%, #7b4930 80%, #603912 100%);
        }

        
        .random-user-bg:hover {
            transform: scale(1.05);
        }
    </style>

</body>
</html>
